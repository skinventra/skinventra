{
  "name": "skinventra",
  "version": "1.0.0",
  "private": true,
  "description": "Web application for tracking CS2 skin investments",
  "scripts": {
    "dev": "turbo run dev start:tunnel prisma:studio",
    "dev:local": "turbo run dev prisma:studio --filter=client --filter=api",
    "dev:tunnel": "turbo run dev start:tunnel prisma:studio",
    "dev:prod": "pnpm build:client && turbo run dev:prod start:tunnel --filter=api",
    "build": "turbo run build",
    "build:client": "turbo run build --filter=client",
    "build:prod": "turbo run build --filter=client... && turbo run build --filter=api",
    "start:prod": "turbo run start:prod --filter=api",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "prisma:generate": "turbo run prisma:generate --filter=api",
    "prisma:migrate": "turbo run prisma:migrate --filter=api",
    "prisma:studio": "turbo run prisma:studio --filter=api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:reset": "docker-compose down -v && docker-compose up -d"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "turbo": "^2.6.0"
  }
}
